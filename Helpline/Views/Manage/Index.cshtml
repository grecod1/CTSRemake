@model Helpline.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change Your Password</h4>
    <hr />    
        @if (Model.HasPassword)
        {
            @Html.ActionLink("Change your password", "ChangePassword", "Manage", null, new { @class = "btn btn-md btn-helpline_color" })
        }
        else
        {
            @Html.ActionLink("Create", "SetPassword", "Manage", null, new { @class = "btn btn-md btn-helpline_color" })
        }
       
</div>
