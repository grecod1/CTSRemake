@model Helpline.ViewModels.AdminViewModels.AdminIndexViewModel

@{
    ViewBag.Title = "Programs";
    SelectList selectStatus = new SelectList(Model.Select_Status, "Value", "Name");
}

<h3 class="text-center">Programs</h3>
<div class="form-group row align-items-end justify-content-center">
    <div class="col-12 col-sm-6 col-xl-2 mb-2 mb-xl-0 mr-5">
        <a class="btn btn-primary" href="/Administrator/AddProgram"><span class="fa fa-plus mr-1"></span> Add Program</a>
    </div>
    <div class="col-12 col-sm-6 col-xl-2 mb-2 mb-xl-0">
        <label class="form-control-label" for="StatusId">
            Status
        </label>
        @Html.DropDownListFor(model => model.Status, selectStatus, "Both", new { @class = "form-control" })

    </div>
    <div class="col-sm-3 col-lg-2">
        <button id="GetData" class="btn btn-secondary" type="button"> <span class="fa fa-search mr-2"></span> Search</button>
    </div>
</div>    
<p id="TableError" class="text-danger"></p>
<table id="table" class="table table-striped data-table-primary w-100"></table>

    @section Scripts{
        @Scripts.Render("~/bundles/Programs");        
}
