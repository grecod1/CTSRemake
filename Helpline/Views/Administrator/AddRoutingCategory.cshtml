@model Helpline.ViewModels.AdminViewModels.UpdateRoutingCategoryViewModel

@{
    ViewBag.Title = "Add Routing Cateogry";
}

@using (Html.BeginForm("AddRoutingCategory", "Administrator", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <h3 class="text-center">Add Routing Category</h3>
        @if(TempData["Error"] != null)
        {
            <p class="text-danger">@TempData["Error"]</p>
        }
        <div class="form-horizontal">            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group col-12 col-lg-6">
                    @Html.LabelFor(model => model.Name)
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" } )
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div id="addEmailField" class="form-group col-12 col-lg-6">
                    <label for="addEmail">Add Email</label>
                    <div class="d-flex">
                        <div class="input-group">
                            <input id="addEmail" type="text" value="" class="form-control userField mr-2" maxlength="100" data-val="true" data-val-regex="Valid email only" />
                            <button id="btnAddEmail" class="btn btn-primary" type="button"><span class="fa fa-plus"></span> Add</button>
                        </div>
                    </div>
                    <span id="AddEmailRequired" class="is-invalid text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <input type="submit" value="Save" class="btn btn-success mr-1 mb-2" />
                    @Html.ActionLink("Back to List", "RoutingCategories", "Administrator", null, new { @class = "btn btn-primary mb-2" })
                    @if (TempData["AlertPreExist"] != null)
                    {
                        <div class="alert alert-danger text-center" role="alert">
                            @TempData["AlertPreExist"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                </div>
                <div class="col-6">
                    <table class="table table-bordered border-primary table-striped bg-white">
                        <tbody id="emailTable"></tbody>
                    </table>
                </div>
            </div>
            <div id="modalEmail" class="modal" role="dialog" aria-labelledby="modal" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        </div>
                        <div class="modal-body">
                            <p id="modalErrorMessage" class="text-center"></p>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
}



@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/AddRoutingCategory")
}


