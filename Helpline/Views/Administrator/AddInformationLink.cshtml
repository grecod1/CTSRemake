@model Helpline.ViewModels.InformationLinkViewModels.UpdateInformationLinkViewModel

@{
    ViewBag.Title = "Add Information Link";
}

@using (Html.BeginForm("AddInformationLink", "Administrator", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    <fieldset>
        <h3 class="text-center">Add Information Link</h3>
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group col-sm-12">
                    @Html.LabelFor(model => model.URL, htmlAttributes: new { @class = "form-control-label" })
                    @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-6">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-control-label" })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>                  
            </div>        
            <div class="row">
                <div class="col-sm-3">
                    <input type="submit" value="Save" class="btn btn-success mr-1" />
                    @Html.ActionLink("Back to List", "InformationLinks", "Administrator", null, new { @class = "btn btn-primary" })
                </div>
                <div class="col-sm-3">
                    @if (TempData["AlertPreExist"] != null)
                    {
                        <div class="alert alert-danger text-center" role="alert">
                            @TempData["AlertPreExist"]
                        </div>
                    }
                </div>                
            </div>        
        </div>
    </fieldset>
}

@section Scripts{
    <script src="~/Scripts/AlertFade.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    }