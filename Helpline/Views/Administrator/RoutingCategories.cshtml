@model Helpline.ViewModels.AdminViewModels.AdminIndexViewModel

@{
    ViewBag.Title = "Routing Categories";
    SelectList selectStatus = new SelectList(Model.Select_Status, "Value", "Name");
}

<h3 class="text-center">Routing Categories</h3>
    <div class="form-group row align-items-end justify-content-center">
        <div class="col-12 col-sm-6 col-xl-2 mb-2 mr-5">
            <a class="btn btn-primary" href="/Administrator/AddRoutingCategory"><span class="fa fa-plus mr-1"></span> Add Routing Category</a>            
        </div>
        <div class="col-12 col-sm-6 col-xl-2 mb-2">
            <label class="form-control-label" for="StatusId">
                Status
            </label>
            @Html.DropDownListFor(model => model.Status, selectStatus,"Both", new { @class = "form-control" })
        </div>
        <div class="col-sm-3 col-lg-2 mb-2">
            <button id="GetData" class="btn btn-secondary" type="button" name="Search"><span class="fa fa-search mr-2"></span> Search</button>
        </div>
    </div>
    <div class="row justify-content-center text-center">
        <div class="col-xl-8">
            <p id="TableError" class="text-danger"></p>
            <table id="table" class="table table-striped data-table-primary w-100"></table>
        </div>
    </div>


@section Scripts{
    @Scripts.Render("~/bundles/RoutingCategories");

}
